{
  "name": "monalliza",
  "version": "0.0.0",
  "description": "Just a browsing app, to view 2ch-like services.",
  "main": "./build/browser/index.js",
  "scripts": {
    "app": "electron ./build/browser/index.js",
    "dev": "npm-run-all -s clean copy watch",
    "clean": "rimraf ./build && mkdirp ./build/assets/images && mkdirp ./build/assets/fonts && mkdirp ./build/browser && mkdirp ./build/renderer",
    "copy": "npm-run-all -p copy:html copy:font copy:image",
    "copy:html": "cpx ./app/renderer/**/*.html ./build/renderer",
    "copy:font": "cpx ./app/assets/fonts/**/* ./build/assets/fonts",
    "copy:image": "cpx ./app/assets/images/**/* ./build/assets/images",
    "build": "npm-run-all -p build:js-browser build:js-renderer",
    "build:js-browser": "babel ./app/browser -d ./build/browser",
    "build:js-renderer": "browserify -t babelify -t vueify ./app/renderer/app.js -o ./build/renderer/app.js",
    "watch": "npm-run-all -p watch:js-browser watch:js-renderer",
    "watch:js-browser": "watch 'babel ./app/browser -d ./build/browser' ./app/browser",
    "watch:js-renderer": "watchify -v -t babelify -t vueify ./app/renderer/app.js -o ./build/renderer/app.js",
    "release": "npm run clean && npm-run-all -p copy release:js-browser release:js-renderer",
    "release:js-browser": "babel ./app/browser -d ./build/browser",
    "release:js-renderer": "browserify -t babelify -t vueify -g uglifyify ./app/renderer/app.js -o ./build/renderer/app.js"
  },
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-core": "^6.7.6",
    "babel-plugin-transform-runtime": "^6.7.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-runtime": "^5.8.38",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "cpx": "^1.3.1",
    "electron-connect": "^0.3.7",
    "electron-prebuilt": "0.37.5",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^1.7.0",
    "rimraf": "^2.5.2",
    "uglifyify": "^3.0.1",
    "vue-hot-reload-api": "^1.3.2",
    "vueify": "^8.3.9",
    "vueify-insert-css": "^1.0.0",
    "watch": "^0.17.1",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "vue": "1.0.21"
  },
  "license": "MIT",
  "private": true
}
